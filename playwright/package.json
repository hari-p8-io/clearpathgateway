{
  "name": "playwright-kafka-tests",
  "version": "1.0.0",
  "description": "Playwright test suite for Kafka + Avro functionality",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "install:browsers": "playwright install",
    "docker:up": "docker-compose -f docker-compose-test.yml up -d",
    "docker:down": "docker-compose -f docker-compose-test.yml down",
    "kafka:test": "node test-runner.js",
    "kafka:test:clean": "npm run docker:down && npm run kafka:test",
    "posttest": "npm run docker:down"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "kafkajs": "^2.2.4",
    "avsc": "^5.7.7",
    "@kafkajs/confluent-schema-registry": "^3.6.2"
  }
}
